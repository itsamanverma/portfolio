/* ================================================
   MODERN STUNNING FOOTER DESIGN 2026
   ================================================ */

.modern-footer {
    position: relative;
    background: #000;
    overflow: hidden;
    color: #fff;
    margin-top: 8rem;
}

/* ========== ANIMATED BACKGROUND ========== */
.footer-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
}

.gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    animation: float 20s ease-in-out infinite;
}

.orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(242, 166, 90, 0.4) 0%, transparent 70%);
    top: -200px;
    left: -200px;
    animation-delay: 0s;
}

.orb-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(255, 199, 133, 0.3) 0%, transparent 70%);
    top: 50%;
    right: -150px;
    animation-delay: -7s;
}

.orb-3 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, rgba(255, 184, 77, 0.2) 0%, transparent 70%);
    bottom: -150px;
    left: 30%;
    animation-delay: -14s;
}

@keyframes float {
    0%, 100% { 
        transform: translate(0, 0) rotate(0deg); 
        opacity: 0.6;
    }
    25% { 
        transform: translate(30px, -30px) rotate(90deg); 
        opacity: 0.8;
    }
    50% { 
        transform: translate(-20px, 20px) rotate(180deg); 
        opacity: 0.4;
    }
    75% { 
        transform: translate(-30px, -10px) rotate(270deg); 
        opacity: 0.7;
    }
}

.floating-particles {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: 
        radial-gradient(2px 2px at 20% 30%, rgba(242, 166, 90, 0.3), transparent),
        radial-gradient(2px 2px at 40% 70%, rgba(255, 199, 133, 0.3), transparent),
        radial-gradient(1px 1px at 90% 40%, rgba(255, 184, 77, 0.4), transparent),
        radial-gradient(1px 1px at 50% 90%, rgba(242, 166, 90, 0.2), transparent);
    background-size: 200px 200px, 300px 300px, 150px 150px, 250px 250px;
    animation: particles 30s linear infinite;
}

@keyframes particles {
    0% { transform: translateY(0); }
    100% { transform: translateY(-20px); }
}

/* ========== FOOTER HERO SECTION ========== */
.footer-hero {
    position: relative;
    z-index: 2;
    /* padding: 8rem 0 6rem; */
    background: linear-gradient(135deg, rgba(0,0,0,0.95) 0%, rgba(20,20,20,0.9) 100%);
}

.footer-hero-content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 6rem;
    align-items: center;
}

.hero-left .footer-title {
    font-size: 4.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 2rem;
    font-family: 'Outfit', sans-serif;
}

.gradient-text {
    background: linear-gradient(135deg, #F2A65A 0%, #FFC785 50%, #FFB84D 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradientFlow 3s ease-in-out infinite;
}

@keyframes gradientFlow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

.footer-subtitle {
    font-size: 1.4rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 3rem;
    line-height: 1.6;
    max-width: 500px;
}

.cta-buttons {
    display: flex;
    gap: 2rem;
    align-items: center;
}

.btn-primary, .btn-secondary {
    padding: 1.2rem 2.5rem;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.btn-primary {
    background: linear-gradient(135deg, #F2A65A 0%, #FFC785 100%);
    color: #000;
    border: 2px solid transparent;
}

.btn-primary.glow {
    box-shadow: 0 0 30px rgba(242, 166, 90, 0.5);
    animation: pulseGlow 2s ease-in-out infinite;
}

@keyframes pulseGlow {
    0%, 100% { box-shadow: 0 0 30px rgba(242, 166, 90, 0.5); }
    50% { box-shadow: 0 0 50px rgba(242, 166, 90, 0.8), 0 0 80px rgba(255, 199, 133, 0.3); }
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 40px rgba(242, 166, 90, 0.6);
}

.btn-secondary {
    background: transparent;
    color: #fff;
    border: 2px solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #F2A65A;
    color: #F2A65A;
    transform: translateY(-3px);
}

/* ========== BRAND SHOWCASE ========== */
.brand-showcase {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
}

.brand-circle {
    position: relative;
    width: 200px;
    height: 200px;
    background: linear-gradient(45deg, rgba(242, 166, 90, 0.1), rgba(255, 199, 133, 0.1));
    border-radius: 50%;
    border: 3px solid rgba(242, 166, 90, 0.3);
    animation: rotate 20s linear infinite;
}

@keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

.brand-circle::before {
    content: '';
    position: absolute;
    inset: -3px;
    border-radius: 50%;
    background: conic-gradient(from 0deg, #F2A65A, #FFC785, #FFB84D, #F2A65A);
    z-index: -1;
    animation: rotate 20s linear infinite reverse;
}

.brand-inner {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(0,0,0,0.9) 0%, rgba(20,20,20,0.8) 100%);
    border-radius: 50%;
}

.brand-icon {
    width: 80px;
    height: 80px;
}

.brand-letter {
    font-family: 'Outfit', sans-serif;
    font-size: 24px;
    font-weight: 800;
    fill: url(#brandGradient);
}

.brand-details {
    text-align: center;
}

.brand-name {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #F2A65A 0%, #FFC785 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.brand-role {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
}

.brand-stats {
    display: flex;
    gap: 2rem;
    justify-content: center;
}

.stat {
    text-align: center;
}

.stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    color: #F2A65A;
    line-height: 1;
}

.stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
}

/* ========== FOOTER CONTENT SECTION ========== */
.footer-content {
    position: relative;
    z-index: 2;
    padding: 6rem 0;
    background: linear-gradient(135deg, rgba(10,10,10,0.95) 0%, rgba(25,25,25,0.9) 100%);
    border-top: 1px solid rgba(242, 166, 90, 0.2);
}

.footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
    gap: 4rem;
}

.footer-col h4 {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: #F2A65A;
    font-weight: 600;
    position: relative;
}

.footer-col h4::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -8px;
    width: 50px;
    height: 3px;
    background: linear-gradient(90deg, #F2A65A 0%, #FFC785 100%);
    border-radius: 2px;
}

.company-info p {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.8;
    margin-bottom: 2rem;
}

.contact-quick {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    transition: all 0.3s ease;
    text-decoration: none;
    color: rgba(255, 255, 255, 0.8);
}

.contact-item:hover {
    background: rgba(242, 166, 90, 0.1);
    color: #F2A65A;
    transform: translateX(5px);
}

.contact-item .icon {
    font-size: 1.2rem;
}

.footer-links {
    list-style: none;
    padding: 0;
}

.footer-links li {
    margin-bottom: 1rem;
}

.footer-links a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: all 0.3s ease;
    display: block;
    padding: 0.5rem 0;
}

.footer-links a:hover {
    color: #F2A65A;
    transform: translateX(10px);
}

.tech-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.tech-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    transition: all 0.3s ease;
}

.tech-item:hover {
    background: rgba(242, 166, 90, 0.1);
    transform: scale(1.05);
}

.tech-icon {
    font-size: 1.5rem;
}

.social-media {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.social-btn {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    text-decoration: none;
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.social-btn svg {
    width: 24px;
    height: 24px;
}

.social-btn.linkedin:hover { 
    background: rgba(0, 119, 181, 0.2);
    color: #0077b5;
    transform: translateY(-3px);
}

.social-btn.github:hover { 
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    transform: translateY(-3px);
}

.social-btn.instagram:hover { 
    background: radial-gradient(circle, rgba(225, 48, 108, 0.2) 0%, rgba(255, 220, 128, 0.2) 100%);
    color: #e1306c;
    transform: translateY(-3px);
}

.newsletter {
    margin-top: 2rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    border: 1px solid rgba(242, 166, 90, 0.2);
}

.newsletter h5 {
    color: #F2A65A;
    margin-bottom: 1rem;
    font-size: 1.2rem;
}

.newsletter p {
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
}

.newsletter-form {
    display: flex;
    gap: 0.5rem;
}

.newsletter-form input {
    flex: 1;
    padding: 0.8rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    color: #fff;
    font-size: 0.9rem;
}

.newsletter-form input::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.newsletter-form button {
    padding: 0.8rem 1.5rem;
    background: linear-gradient(135deg, #F2A65A 0%, #FFC785 100%);
    border: none;
    border-radius: 8px;
    color: #000;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.newsletter-form button:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 20px rgba(242, 166, 90, 0.4);
}

/* ========== FOOTER BOTTOM ========== */
.footer-bottom {
    position: relative;
    z-index: 2;
    padding: 2rem 0;
    background: rgba(0, 0, 0, 0.9);
    border-top: 1px solid rgba(242, 166, 90, 0.2);
}

.footer-bottom-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 2rem;
}

.copyright p {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
    margin: 0;
}

.footer-bottom-links {
    display: flex;
    gap: 2rem;
}

.footer-bottom-links a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
}

.footer-bottom-links a:hover {
    color: #F2A65A;
}

.status-badge {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.8rem 1.5rem;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 25px;
    color: #22c55e;
    font-size: 0.9rem;
}

.status-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.1); }
}

/* ========== RESPONSIVE DESIGN ========== */
@media (max-width: 1200px) {
    .footer-grid {
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
    }
    
    .footer-hero-content {
        gap: 4rem;
    }
}

@media (max-width: 768px) {
    .footer-hero {
        padding: 4rem 0 3rem;
    }
    
    .footer-hero-content {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 3rem;
    }
    
    .hero-left .footer-title {
        font-size: 3rem;
    }
    
    .footer-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .cta-buttons {
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .brand-circle {
        width: 150px;
        height: 150px;
    }
    
    .brand-stats {
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    .footer-bottom-content {
        flex-direction: column;
        text-align: center;
    }
    
    .tech-grid {
        grid-template-columns: 1fr;
    }
    
    .newsletter-form {
        flex-direction: column;
    }
}

@media (max-width: 480px) {
    .hero-left .footer-title {
        font-size: 2.5rem;
    }
    
    .footer-subtitle {
        font-size: 1.2rem;
    }
    
    .footer-content {
        padding: 3rem 0;
    }
    
    .footer-hero {
        padding: 3rem 0 2rem;
    }
}